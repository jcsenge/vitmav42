<%- include header.ejs -%>
    <main role="main">
      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Belépés</h1>
          <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Id tempora
            iusto molestias officia ea? Quia, qui beatae! Illo incidunt optio
            molestiae quisquam ipsam dolorem sequi, quo minus dignissimos, culpa
            ex.
          </p>
        </div>
      </div>

      <div class="container">
        <!-- Example row of columns -->
        <div class="row justify-content-center">
          <div class="col-md-3">
            <p></p>
            <form class="form-signin">
              <h1 class="h3 mb-3 font-weight-normal">Belépés</h1>
              <label for="inputEmail" class="sr-only">Email</label>
              <input
                type="email"
                id="inputEmail"
                class="form-control"
                placeholder="Email cím"
                name="email" id="email"
                required
                autofocus
              />
              <br />
              <label for="inputPassword" class="sr-only">Password</label>
              <input
                type="password"
                id="inputPassword"
                class="form-control"
                name="password" id="password"
                placeholder="Jelszó"
                required
              />
              <br />
              <input type="submit" class="btn btn-warning" value="Belépés"/>
            </form>

            <br />
            <p>
              <a class="btn button" role="button" href="/register">
                Regisztráció &raquo;</a
              >
            </p>
          </div>

          <div class="col-md-3">
            <p></p>
            <form class="form-signin">
              <h1 class="h3 mb-3 font-weight-normal">Elfelejtett Jelszó</h1>
              <label for="inputEmail" class="sr-only">Email</label>
              <input
                type="email"
                id="inputEmail"
                class="form-control"
                placeholder="Email cím"
                required
                autofocus
              />
              <br />
              <button class="btn btn-lg btn-block btn-themed" type="button">
                Küldés
              </button>
            </form>
          </div>
        </div>
      </div>
  
    </main>

