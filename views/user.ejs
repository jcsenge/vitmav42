<%- include  header.ejs -%>
<%- include navbar.ejs -%>
    </nav>
    <br />
    <br />
    <br />
    <br />

    <main role="main">
      <div class="row justify-content-center">
        <div class="col-sm-4">
          <div class="card card-fluid">
            <h6 class="card-header">Fiók szerkesztése</h6>
            <!-- .card-body -->
            <div class="card-body">
              <!-- form -->
              <%- include errorbox.ejs %>
              <form method="POST">
                <!-- form row -->
                <div class="form-row">
                  <!-- form column -->
                  <div class="col mb-3">
                    <label for="name">Név</label>
                    <input
                      type="text"
                      class="form-control"
                      name="name"
                      id="name"
                      value="<%= user.name %>"
                      required
                    />
                  </div>
                </div>
                <!-- /form row -->
                <!-- .form-group -->
                <div class="form-group">
                  <label for="email">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    name="email"
                    id="email"
                    value="<%= user.email %>"
                    required
                  />
                </div>
                <!-- /.form-group -->
                <!-- .form-group -->
                <div class="form-group">
                  <label for="pw">Új jelszó</label>
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    id="pw"
                    value="superMagicSecretString"
                  />
                </div>
                <!-- /.form-group -->
                <div class="form-actions">
                  <!-- enable submit btn when user type their current password -->
                  <input
                    type="password"
                    class="form-control ml-auto mr-3"
                    id="passwordagain"
                    name="passwordagain"
                    placeholder="Jelszó mégegyszer"
                  />
                </div>
                <!-- /.form-actions -->
                <hr />
                <!-- .form-actions -->
                <br />
                <center>
                  <a href="/home/profile/<%= user._id %>">
                    <button type="submit" class="btn btn-themed">
                      Mentés
                    </button>
                  </a>
                </center>
                <hr />
                <a href="/profile/del/<%= user._id %>">
                  <button type="button" class="btn btn-danger">
                    Fiók törlése
                  </button>
                </a>
                <br />
                <small class="danger"
                  >Ez a művelet visszavonhatatlan, gondolkozz mielőtt
                  megnyomod!</small
                >
              </form>
              <!-- /form -->
            </div>
            <!-- /.card-body -->
          </div>
        </div>
      </div>
    </main>
    <br />
    <br />
    <%- include footer.ejs -%>